<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="crop-1" author="sujal">
        <createTable tableName="crop">
            <column name="crop_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_by" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="category_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="unit" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="region" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_on" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="crop-2" author="sujal">
        <addForeignKeyConstraint
                baseTableName="crop"
                baseColumnNames="category_id"
                constraintName="fk_crop_category"
                referencedTableName="category"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="crop-7" author="sujal">
        <renameColumn tableName="crop" oldColumnName="unit" newColumnName="stock_unit" columnDataType="VARCHAR(50)"/>
    </changeSet>

    <changeSet id="crop-3" author="sujal">

        <addColumn tableName="crop">
            <column name="selling_unit" type="VARCHAR(50)" afterColumn="stock_unit">
                <constraints nullable="false"/>
            </column>
            <column name="expire_month" type="VARCHAR(7)" afterColumn="region">
                <constraints nullable="false"/>
            </column>
            <column name="crop_type" type="VARCHAR(255)" afterColumn="name"/>
            <column name="quality" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="produced_way" type="VARCHAR(50)" afterColumn="region">
                <constraints nullable="false"/>
            </column>
            <column name="availability_status" type="VARCHAR(50)" afterColumn="expire_month">
                <constraints nullable="false"/>
            </column>
            <column name="expected_ready_month" type="VARCHAR(7)" afterColumn="availability_status"/>
        </addColumn>
    </changeSet>

    <changeSet id="crop-4" author="sujal">
        <renameColumn tableName="crop" oldColumnName="quantity" newColumnName="stock_quantity" columnDataType="INT"/>
        <addColumn tableName="crop">
            <column name="selling_quantity" type="INT" afterColumn="selling_unit">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="crop-5" author="sujal" >
        <addColumn tableName="crop" >
            <column name="normalized_quantity" type="double" afterColumn="expected_ready_month">
                <constraints nullable="false"/>
            </column>
            <column name="normalization_unit_type" type="varchar(255)" afterColumn="normalized_quantity">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="crop-6" author="sujal">
        <addColumn tableName="crop">
            <column name="normalization_price_per_KG" type="double" afterColumn="normalization_unit_type">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
