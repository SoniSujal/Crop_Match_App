<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-available-crops-table" author="sujal">
        <createTable tableName="available_crops">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="crop_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="category_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                columnNames="crop_name, category_id"
                tableName="available_crops"
                constraintName="uc_crop_name_category_id" />

        <addForeignKeyConstraint
                baseTableName="available_crops"
                baseColumnNames="category_id"
                referencedTableName="category"
                referencedColumnNames="id"
                constraintName="fk_available_crops_category"/>
    </changeSet>

</databaseChangeLog>
