<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="user_detail-1" author="sujal">
        <createTable tableName="user_detail">
            <column name="user_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="mobile" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="pincode" type="VARCHAR(10)"/>
            <column name="country" type="VARCHAR(100)"/>
            <column name="created_on" type="TIMESTAMP"/>
            <column name="updated_on" type="TIMESTAMP"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
        </createTable>
    </changeSet>

    <changeSet id="add-region-to-user_detail" author="smit">
        <addColumn tableName="user_detail">
            <column name="region" type="VARCHAR(50)" remarks="User's region" afterColumn="country">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="user_detail-2" author="sujal">
        <comment>Fix default behavior of created_on and updated_on</comment>
        <sql>
            ALTER TABLE user_detail
            MODIFY COLUMN created_on TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
            MODIFY COLUMN updated_on TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP;
        </sql>
    </changeSet>
</databaseChangeLog>
