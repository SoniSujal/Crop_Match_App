<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="buyer_request-1" author="sujal">
        <createTable tableName="buyer_request">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="buyer_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="crop_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="unit" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="region" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="expected_price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="buyer_request-2" author="sujal">
        <addForeignKeyConstraint
                baseTableName="buyer_request"
                baseColumnNames="category_id"
                constraintName="fk_buyer_request_category"
                referencedTableName="category"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="buyer_request-3" author="sujal">
        <addColumn tableName="buyer_request">
            <column name="status" type="VARCHAR(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="buyer_request-4" author="smit">
        <addColumn tableName="buyer_request">
            <column name="quality" type="VARCHAR(20)" afterColumn="region">
                <constraints nullable="false"/>
            </column>
            <column name="produced_way" type="VARCHAR(20)" afterColumn="quality">
            </column>
            <column name="need_by_date" type="DATE" afterColumn="expected_price">
            </column>
            <column name="is_expired" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="is_matched" type="BOOLEAN" defaultValueBoolean="false" afterColumn="created_on">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="buyer_request-5" author="smit">
        <renameColumn
                tableName="buyer_request"
                oldColumnName="quantity"
                newColumnName="required_quantity"
                columnDataType="INT"/>
    </changeSet>

    <changeSet id="buyer_request-6" author="sujal">
        <addColumn tableName="buyer_request">
            <column name="updated_on" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="buyer-request-7" author="sujal">
        <comment>Fix default behavior of created_on and updated_on</comment>
        <sql>
            ALTER TABLE buyer_request
            MODIFY COLUMN created_on TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
            MODIFY COLUMN updated_on TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP;
        </sql>
    </changeSet>

    <changeSet id="buyer_request-8" author="sujal">
        <addColumn tableName="buyer_request">
            <column name="matched_crop_name" type="VARCHAR(255)" afterColumn="crop_name">
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="buyer-request-9" author="sujal">
        <comment>Fix default behavior of created_on and updated_on</comment>
        <sql>
            ALTER TABLE buyer_request
            MODIFY COLUMN created_on TIMESTAMP DEFAULT CURRENT_TIMESTAMP;
        </sql>
    </changeSet>

</databaseChangeLog>
